{
  "name": "wearefrank",
  "publisher": "wearefrank",
  "displayName": "Frank!Framework",
  "description": "A plugin to help users with the development of their Frank!Framework integrations!",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "frank.editUserSnippet",
          "when": "false"
        },
        {
          "command": "frank.deleteUserSnippet",
          "when": "false"
        },
        {
          "command": "frank.exportUserSnippets",
          "when": "false"
        },
        {
          "command": "frank.deleteAllUserSnippetByName",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "frank.addUserSnippet",
          "when": "editor.hasSelection",
          "group": "Frank@1"
        }
      ],
      "view/title": [
        {
          "command": "frank.addNameOfUserSnippets",
          "when": "view == userSnippetsTreeview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "frank.editUserSnippet",
          "when": "view == userSnippetsTreeview && viewItem == snippetTreeItem",
          "group": "inline"
        },
        {
          "command": "frank.deleteUserSnippet",
          "when": "view == userSnippetsTreeview && viewItem == snippetTreeItem",
          "group": "inline@2"
        },
        {
          "command": "frank.deleteAllUserSnippetByName",
          "when": "view == userSnippetsTreeview && viewItem == snippetNameTreeItem",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "frank.createNewFrank",
        "title": "Create a Frank"
      },
      {
        "command": "frank.startAnt",
        "title": "Start a Frank"
      },
      {
        "command": "frank.startDocker",
        "title": "Start a Frank With Docker"
      },
      {
        "command": "frank.startDockerCompose",
        "title": "Start a Frank With Docker Compose"
      },
      {
        "command": "frank.addUserSnippet",
        "title": "Add a New Frank! Snippet"
      },
      {
        "command": "frank.createNewAdapter",
        "title": "Create a New Adapter"
      },
      {
        "command": "frank.editUserSnippet",
        "title": "Edit Snippet",
        "icon": "$(edit)"
      },
      {
        "command": "frank.deleteUserSnippet",
        "title": "Delete Snippet",
        "icon": "$(trash)"
      },
      {
        "command": "frank.exportUserSnippets",
        "title": "Export Snippet"
      },
      {
        "command": "frank.deleteAllUserSnippetByName",
        "title": "Delete All Snippets",
        "icon": "$(trash)"
      },
      {
        "command": "frank.changeNameOfUserSnippets",
        "title": "Change Name"
      },
      {
        "command": "frank.addNameOfUserSnippets",
        "title": "Add a New Name",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "secondarySidebar": [
        {
          "id": "flowView",
          "title": "Frank!Flow",
          "icon": "resources/wearefrank_logo.svg"
        }
      ],
      "activitybar": [
        {
          "id": "frank",
          "title": "Frank!Framework",
          "icon": "resources/wearefrank_logo.svg"
        }
      ]
    },
    "views": {
      "flowView": [
        {
          "id": "flowWebView",
          "name": "Frank!Flow",
          "type": "webview"
        }
      ],
      "frank": [
        {
          "id": "frankwelcome",
          "name": "Frank!Framework"
        }
      ],
      "explorer": [
        {
          "id": "start",
          "name": "Start!"
        },
        {
          "id": "adapter",
          "name": "Adapter!"
        },
        {
          "id": "userSnippetsTreeview",
          "name": "Frank! Snippets"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "frankwelcome",
        "contents": "Welcome to the Frank!Framework!\nThe Frank!Framework is an easy-to-use, stateless integration framework which allows (transactional) messages to be modified and exchanged between different systems.\n[Open a Frank](command:vscode.openFolder)\n[Create a Frank](command:frank.createNewFrank)"
      },
      {
        "view": "adapter",
        "contents": "[Create an Adapter](command:frank.createNewAdapter)"
      },
      {
        "view": "start",
        "contents": "[Start](command:frank.startAnt)\n[Start With Docker](command:frank.startDocker)\n[Start With Docker Compose](command:frank.startDockerCompose)"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "@frankframework/frank-config-layout": "^1.2.4",
    "@xmldom/xmldom": "^0.8.11",
    "he": "^1.2.0",
    "jsdom": "^27.3.0",
    "saxon-js": "2.5",
    "svg-pan-zoom": "^3.6.2",
    "xml-formatter": "^3.6.7"
  }
}
