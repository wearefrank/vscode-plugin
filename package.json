{
  "name": "wearefrank",
  "publisher": "wearefrank",
  "displayName": "Frank!Framework",
  "description": "A plugin to help users with the development of their Frank!Framework integrations!",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:xml"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "frank.editUserSnippet",
          "when": "false"
        },
        {
          "command": "frank.deleteUserSnippet",
          "when": "false"
        },
        {
          "command": "frank.deleteAllUserSnippetByCategory",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "frank.addNewUserSnippet",
          "when": "editor.hasSelection",
          "group": "Frank@1"
        }
      ],
      "view/title": [
        {
          "command": "frank.addNewCategoryOfUserSnippets",
          "when": "view == userSnippetsTreeview",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "frank.editUserSnippet",
          "when": "view == userSnippetsTreeview && viewItem == snippetTreeItem",
          "group": "inline"
        },
        {
          "command": "frank.deleteUserSnippet",
          "when": "view == userSnippetsTreeview && viewItem == snippetTreeItem",
          "group": "inline@2"
        },
        {
          "command": "frank.deleteAllUserSnippetByCategory",
          "when": "view == userSnippetsTreeview && viewItem == categoryTreeItem",
          "group": "inline"
        },
        {
          "command": "frank.startCurrent",
          "when": "view == startTreeView && (viewItem == startTreeItem-ant || viewItem == startTreeItem-docker || viewItem == startTreeItem-dockerCompose)",
          "group": "inline@2"
        },
        {
          "command": "frank.startProject",
          "when": "view == startTreeView && viewItem == projectTreeItem",
          "group": "inline@2"
        },
        {
          "command": "frank.toggleUpdateOn",
          "when": "view == startTreeView && viewItem == startTreeItem-ant && !frank.updateEnabled",
          "group": "inline"
        },
        {
          "command": "frank.toggleUpdateOff",
          "when": "view == startTreeView && viewItem == startTreeItem-ant && frank.updateEnabled",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "frank.createNewFrank",
        "title": "Create a Frank"
      },
      {
        "command": "frank.startAnt",
        "title": "Start a Frank"
      },
      {
        "command": "frank.startDocker",
        "title": "Start a Frank With Docker"
      },
      {
        "command": "frank.startDockerCompose",
        "title": "Start a Frank With Docker Compose"
      },
      {
        "command": "frank.addNewUserSnippet",
        "title": "Add a New Frank! Snippet"
      },
      {
        "command": "frank.addNewAdapter",
        "title": "Add a New Adapter"
      },
      {
        "command": "frank.editUserSnippet",
        "title": "Edit Snippet",
        "icon": "$(edit)"
      },
      {
        "command": "frank.deleteUserSnippet",
        "title": "Delete Snippet",
        "icon": "$(trash)"
      },
      {
        "command": "frank.deleteAllUserSnippetByCategory",
        "title": "Delete All Snippets",
        "icon": "$(trash)"
      },
      {
        "command": "frank.addNewCategoryOfUserSnippets",
        "title": "Add a New Category",
        "icon": "$(add)"
      },
      {
        "command": "frank.startCurrent",
        "title": "Run Current Project",
        "icon": "$(play)"
      },
      {
        "command": "frank.startProject",
        "title": "Run Project",
        "icon": "$(play)"
      },
      {
        "command": "frank.toggleUpdateOn",
        "title": "Enable Update",
        "icon": "$(sync-ignored)"
      },
      {
        "command": "frank.toggleUpdateOff",
        "title": "Disable Update",
        "icon": "$(sync)"
      }
    ],
    "viewsContainers": {
      "secondarySidebar": [
        {
          "id": "frankFlowViewContainer",
          "title": "Frank!Flow",
          "icon": "resources/wearefrank_logo.svg"
        }
      ],
      "activitybar": [
        {
          "id": "welcomeViewContainer",
          "title": "Frank!Framework",
          "icon": "resources/wearefrank_logo.svg"
        }
      ]
    },
    "views": {
      "frankFlowViewContainer": [
        {
          "id": "frankFlowView",
          "name": "Frank!Flow",
          "type": "webview"
        }
      ],
      "welcomeViewContainer": [
        {
          "id": "welcomeView",
          "name": "Frank!Framework"
        }
      ],
      "explorer": [
        {
          "id": "startTreeView",
          "name": "Start!"
        },
        {
          "id": "adapterView",
          "name": "Adapter!"
        },
        {
          "id": "userSnippetsTreeview",
          "name": "Frank! Snippets"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "welcomeView",
        "contents": "Welcome to the Frank!Framework!\nThe Frank!Framework is an easy-to-use, stateless integration framework which allows (transactional) messages to be modified and exchanged between different systems.\n[Open a Frank](command:vscode.openFolder)\n[Create a Frank](command:frank.createNewFrank)"
      },
      {
        "view": "adapterView",
        "contents": "[Create an Adapter](command:frank.addNewAdapter)"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "@frankframework/frank-config-layout": "^1.2.4",
    "@xmldom/xmldom": "^0.8.11",
    "he": "^1.2.0",
    "jsdom": "^27.3.0",
    "saxon-js": "2.5",
    "svg-pan-zoom": "^3.6.2",
    "xml-formatter": "^3.6.7"
  }
}
